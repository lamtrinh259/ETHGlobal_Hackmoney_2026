# ============================================================================
# PUBLIC APP CONFIG
# ============================================================================

# Primary app URL/domain used in docs links
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_DOMAIN=clawork.xyz

# WalletConnect / RainbowKit
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# Supabase (public URL + publishable key)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_publishable_key
# Optional alias if you prefer Supabase's new naming in your local file:
# NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY=your_supabase_publishable_key

# Default ERC-8004 network: sepolia | baseSepolia | base
NEXT_PUBLIC_DEFAULT_NETWORK=sepolia

# Sepolia Testnet (primary for ENS + current Clawork MVP)
NEXT_PUBLIC_SEPOLIA_RPC=https://rpc.sepolia.org

# Base Sepolia (optional fallback, not used for ENS subdomain issuance)
NEXT_PUBLIC_BASE_SEPOLIA_RPC=https://sepolia.base.org

# Base Mainnet
NEXT_PUBLIC_BASE_RPC=https://mainnet.base.org

# ============================================================================
# ERC-8004 CONTRACTS
# ============================================================================

# Sepolia (Chain ID: 11155111)
NEXT_PUBLIC_SEPOLIA_IDENTITY_REGISTRY=0x8004A818BFB912233c491871b3d84c89A494BD9e
NEXT_PUBLIC_SEPOLIA_REPUTATION_REGISTRY=0x8004B663056A597Dffe9eCcC1965A193B7388713

# Base Sepolia (Chain ID: 84532)
NEXT_PUBLIC_BASE_SEPOLIA_IDENTITY_REGISTRY=0x8004A818BFB912233c491871b3d84c89A494BD9e
NEXT_PUBLIC_BASE_SEPOLIA_REPUTATION_REGISTRY=0x8004B663056A597Dffe9eCcC1965A193B7388713

# Base Mainnet (Chain ID: 8453)
NEXT_PUBLIC_BASE_IDENTITY_REGISTRY=0x8004A169FB4a3325136EB29fA0ceB6D2e539a432
NEXT_PUBLIC_BASE_REPUTATION_REGISTRY=0x8004BAa17C55a88189AE136b182e5fdA19dE9b63

# ENS registry on Sepolia (for ENS/subdomain operations)
NEXT_PUBLIC_SEPOLIA_ENS_REGISTRY=0x00000000000C2E074eC69A0dFb2997BA6C7d2e1e

# ============================================================================
# ENS SUBDOMAIN ISSUANCE (SERVER SIDE, SEPOLIA)
# ============================================================================

# Parent ENS domain for agent subdomains
ENS_PARENT_DOMAIN=clawork.eth

# Sepolia RPC used by server-side ENS registrar
ENS_SEPOLIA_RPC=https://ethereum-sepolia-rpc.publicnode.com

# Wallet private key that owns ENS_PARENT_DOMAIN on Sepolia (0x...)
# ENS_ADMIN_PRIVATE_KEY=0x...

# Optional resolver override for subdomains. If omitted, parent resolver is reused.
# ENS_RESOLVER_ADDRESS=0x...

# ============================================================================
# YELLOW NETWORK CONFIG
# ============================================================================

# ClearNode endpoint (sandbox recommended for hackathon)
NEXT_PUBLIC_YELLOW_CLEARNODE=wss://clearnet-sandbox.yellow.com/ws

# Yellow contracts (Sepolia sandbox)
NEXT_PUBLIC_YELLOW_CUSTODY=0x019B65A265EB3363822f2752141b3dF16131b262
NEXT_PUBLIC_YELLOW_ADJUDICATOR=0x7c7ccbc98469190849BCC6c926307794fDfB11F2
NEXT_PUBLIC_YELLOW_BROKER=0xc7E6827ad9DA2c89188fAEd836F9285E6bFdCCCC

# Token addresses
# Sepolia ERC-20 settlement token used by Yellow flow
NEXT_PUBLIC_SEPOLIA_USDC=0xDB9F293e3898c9E5536A3be1b0C56c89d2b32DEb
NEXT_PUBLIC_BASE_USDC=0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913
NEXT_PUBLIC_YELLOW_TEST_USD=0xDB9F293e3898c9E5536A3be1b0C56c89d2b32DEb

# When true, channel operations are mocked for local testing.
YELLOW_MOCK_MODE=true

# ============================================================================
# IPFS / PINATA
# ============================================================================

NEXT_PUBLIC_PINATA_API_KEY=your_pinata_key
PINATA_SECRET_KEY=your_pinata_secret
NEXT_PUBLIC_IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs

# ============================================================================
# SERVER-ONLY SECRETS (NO NEXT_PUBLIC_ PREFIX)
# ============================================================================

# Supabase server key for API routes (use Secret key / service role equivalent)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_secret_key
# Optional alias with new naming:
# SUPABASE_SECRET_KEY=your_supabase_secret_key

# ENS admin signer for automatic subdomain issuance
# ENS_ADMIN_PRIVATE_KEY=0x...

# Server signer used for Yellow message signing
# YELLOW_SERVER_PRIVATE_KEY=0x...

# Admin wallet address for /admin dashboard access
NEXT_PUBLIC_ADMIN_WALLET=0xYourAdminWalletAddress

# Cron secret for auto-release endpoint (set on Vercel, also used by admin UI)
# CRON_SECRET=your_cron_secret
NEXT_PUBLIC_CRON_SECRET=your_cron_secret
